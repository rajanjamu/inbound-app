<%- include('../partials/header') %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-8 col-md-6 col-lg-5">
            <h2 class="mb-3">Enquiry - New</h2>
            <form action="/enquiry" method="POST">
                <div class="form-group">
                  <label for="prospectName">Customer Name</label>
                  <input type="text" class="form-control" name="prospectName" id="prospectName" required>
                </div>
                <div class="form-group">
                  <label for="mobileNumber">Mobile Number</label>
                  <input type="tel" class="form-control" name="mobileNumber" id="mobileNumber" required>
                  <small class="form-text text-muted">Format: 9887216666</small>
                </div>
                <div class="form-group">
                    <label for="channel">Channel</label>
                    <select class="custom-select" name="channel" id="channel" required>
                        <option value=""" hidden selected>Select Channel</option>
                        <% channels.forEach(chnl => { %>
                            <option value="<%= chnl._id %>"><%= chnl.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="department">Department</label>
                    <select class="custom-select" name="department" id="department" required>
                        <option value="" hidden selected>Select Department</option>
                        <% depts.forEach(dept => { %>
                            <option value="<%= dept._id %>"><%= dept.name %></option>
                        <% }) %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="remarks">Remarks</label>
                    <textarea class="form-control" name="remarks" id="remarks" rows="2"></textarea>
                </div>
                <div class="form-check mb-2">
                    <input type="checkbox" class="form-check-input" name="isSendSMS" id="isSendSMS">
                    <label class="form-check-label" for="isSendSMS">Send SMS Notification</label>
                </div>
                <button type="submit" class="btn btn-secondary">Submit</button>
                <a href="/" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>